    "@testing-library/react": "14.1.2",
    "@types/jest": "29.5.10",
    "@types/node": "^20.11.16",
    "graphql": "16.8.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "miragejs": "^0.1.48",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "rimraf": "5.0.5",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "publishConfig": {
    "access": "public"
  }
